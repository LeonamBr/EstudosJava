import java.util.Scanner;

public class Main {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);

		System.out.println("Entre com as dimensões da matriz: ");

		int l = sc.nextInt();
		int c = sc.nextInt();

		int[][] matriz = new int[l][c];

		for (int i = 0; i < matriz.length; i++) {
			for (int j = 0; j < matriz[i].length; j++) {
				matriz[i][j] = sc.nextInt();
			}
		}

		System.out.println("Que numero deseja verificar ocorrencia? ");
		int numero = sc.nextInt();

		for (int i = 0; i < matriz.length; i++) {
			for (int j = 0; j < matriz[i].length; j++) {
				if (matriz[i][j] == numero) {
					System.out.printf("Posição %d,%d: %n", i, j);
					if (i != 0)
						System.out.println("Esquerda: " + matriz[i - 1][j]);
					if (i != matriz.length - 1)
						System.out.println("Direita: " + matriz[i + 1][j]);
					if (j != 0)
						System.out.println("Acima: " + matriz[i][j - 1]);
					if (j != matriz[i].length - 1)
						System.out.println("Abaixo: " + matriz[i][j + 1]);
				}
			}
		}

	}

}
